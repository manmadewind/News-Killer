

def isChinese(u_char):
    if u_char >= u'\u3300' and u_char <= u'\u9fff':
        return True
    return False

def isEnglish(u_char):
    # lower char [0061, 007a]
    # upper char [0041, 005a]
    return judge(u_char, u'\u0061', u'\u007a') or judge(u_char, u'\u0041', u'\u005a')
'''
    # lower char [0061, 007a]
    if c > u'\u0061' and c < u'\u007a':
        return True

    # upper char [0041, 005a]
    if c > u'\u0041' and c < u'\u005a':
        return True
    return False
'''

def isDigit(u_char):
    return judge(u_char, u'\u0030', u'\u0039')

